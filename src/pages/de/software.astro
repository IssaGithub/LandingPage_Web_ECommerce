---
import { translations } from '../../i18n/translations.js';

const currentLocale = 'de';
const t = translations[currentLocale];
const subpage = t.subpages.software;
---
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{subpage.title} | {t.company}</title>
    <meta name="description" content={subpage.description} />
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="bg-gray-900 text-white min-h-screen">
    <!-- Navigation -->
    <nav class="bg-gray-800 py-4">
      <div class="max-w-6xl mx-auto px-8 flex justify-between items-center">
        <a href="/de" class="text-xl font-bold">{t.company}</a>
        <div class="flex gap-4">
          <a href="/de" class="text-gray-300 hover:text-white transition-colors">Home</a>
          <a href="/" class="text-gray-300 hover:text-white transition-colors">English</a>
        </div>
      </div>
    </nav>

    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-blue-900 py-20">
      <div class="max-w-4xl mx-auto px-8 text-center">
        <h1 class="text-5xl font-bold mb-6">{subpage.title}</h1>
        <p class="text-xl text-gray-300 mb-8">{subpage.subtitle}</p>
        <p class="text-lg text-gray-400 mb-10">{subpage.description}</p>
        <button onclick="window.open('https://calendly.com/issa-zaytoun/erstgesprach-mit-issa-zaytoun-web-e-commerce', '_blank')" class="bg-cyan-400 hover:bg-cyan-500 text-black font-bold py-4 px-8 rounded-lg text-lg transition-colors">
          {t.calendlyButton}
        </button>
      </div>
    </section>

    <!-- Benefits Section -->
    <section class="py-16">
      <div class="max-w-6xl mx-auto px-8">
        <h2 class="text-3xl font-bold text-center mb-12">Warum unsere Softwareentwicklung?</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {subpage.benefits.map(benefit => (
            <div class="bg-gray-800 p-6 rounded-lg">
              <div class="text-cyan-400 text-2xl mb-4">✓</div>
              <p class="text-gray-300">{benefit}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Process Section -->
    <section class="bg-gray-800 py-16">
      <div class="max-w-6xl mx-auto px-8">
        <h2 class="text-3xl font-bold text-center mb-12">{subpage.process.title}</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          {subpage.process.steps.map(step => (
            <div class="text-center">
              <div class="bg-cyan-400 text-black w-16 h-16 rounded-full flex items-center justify-center text-xl font-bold mx-auto mb-4">
                {step.title.charAt(0)}
              </div>
              <h3 class="text-xl font-semibold mb-3">{step.title}</h3>
              <p class="text-gray-300">{step.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Technologies Section -->
    <section class="py-16">
      <div class="max-w-6xl mx-auto px-8">
        <h2 class="text-3xl font-bold text-center mb-12">Unser Technology-Stack</h2>
        <div class="grid md:grid-cols-3 gap-8">
          <div class="bg-gray-800 p-8 rounded-lg">
            <h3 class="text-2xl font-bold mb-6 text-cyan-400">Frontend</h3>
            <ul class="space-y-2">
              <li class="text-gray-300">• React & Next.js</li>
              <li class="text-gray-300">• Vue.js & Nuxt.js</li>
              <li class="text-gray-300">• TypeScript</li>
              <li class="text-gray-300">• Tailwind CSS</li>
            </ul>
          </div>
          <div class="bg-gray-800 p-8 rounded-lg">
            <h3 class="text-2xl font-bold mb-6 text-cyan-400">Backend</h3>
            <ul class="space-y-2">
              <li class="text-gray-300">• Node.js</li>
              <li class="text-gray-300">• GraphQL & REST APIs</li>
              <li class="text-gray-300">• PostgreSQL & MongoDB</li>
              <li class="text-gray-300">• Redis Caching</li>
            </ul>
          </div>
          <div class="bg-gray-800 p-8 rounded-lg">
            <h3 class="text-2xl font-bold mb-6 text-cyan-400">DevOps</h3>
            <ul class="space-y-2">
              <li class="text-gray-300">• Docker & CI/CD</li>
              <li class="text-gray-300">• AWS & DigitalOcean</li>
              <li class="text-gray-300">• Vercel & Netlify</li>
              <li class="text-gray-300">• Monitoring & Analytics</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Detail Section -->
    <section class="bg-gray-800 py-16">
      <div class="max-w-6xl mx-auto px-8">
        <h2 class="text-3xl font-bold text-center mb-12">Unsere Softwareentwicklungs-Services</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-gray-900 p-8 rounded-lg">
            <h3 class="text-2xl font-bold mb-4 text-cyan-400">Webanwendungen</h3>
            <p class="text-gray-300 mb-4">Komplexe Dashboards, Admin-Panels und Business-Anwendungen mit modernen Frameworks.</p>
            <ul class="space-y-2">
              <li class="text-gray-400">• Custom Admin-Dashboards</li>
              <li class="text-gray-400">• Business-Management-Tools</li>
              <li class="text-gray-400">• Datenvisualisierungs-Plattformen</li>
              <li class="text-gray-400">• Echtzeit-Kollaborationstools</li>
            </ul>
          </div>
          <div class="bg-gray-900 p-8 rounded-lg">
            <h3 class="text-2xl font-bold mb-4 text-cyan-400">API-Entwicklung</h3>
            <p class="text-gray-300 mb-4">Robuste, skalierbare APIs und Microservices für moderne Anwendungen.</p>
            <ul class="space-y-2">
              <li class="text-gray-400">• RESTful API-Design</li>
              <li class="text-gray-400">• GraphQL-Implementierungen</li>
              <li class="text-gray-400">• Microservices-Architektur</li>
              <li class="text-gray-400">• Drittanbieter-Integrationen</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-gradient-to-r from-cyan-600 to-blue-600 py-16">
      <div class="max-w-4xl mx-auto px-8 text-center">
        <h2 class="text-3xl font-bold mb-6">Bereit für deine maßgeschneiderte Lösung?</h2>
        <p class="text-xl mb-8 opacity-90">Lass uns deine Projektanforderungen besprechen und Software entwickeln, die perfekt zu deinen Bedürfnissen passt.</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button onclick="window.open('https://calendly.com/issa-zaytoun/erstgesprach-mit-issa-zaytoun-web-e-commerce', '_blank')" class="bg-white hover:bg-gray-100 text-blue-600 font-bold py-4 px-8 rounded-lg text-lg transition-colors">
            Kostenloses Beratungsgespräch
          </button>
          <span class="flex items-center justify-center bg-white/20 text-white font-semibold py-4 px-6 rounded-lg">
            Telefon: +49 176 81441063
          </span>
        </div>
      </div>
    </section>

    <footer class="text-center text-gray-400 py-8">&copy; {new Date().getFullYear()} {t.footer}</footer>
  </body>
</html> 