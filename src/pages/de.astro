---
import { translations } from '../i18n/translations.js';

// Force German locale for this page
const currentLocale = 'de';
const t = translations[currentLocale];
const otherLocale = 'en';
const otherLocalePath = '/';

const topics = [
  t.topics.website,
  t.topics.onlineShop,
  t.topics.individualProgramming,
  t.topics.app
];
---
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{t.title}</title>
    <meta name="description" content={t.description} />
    <link rel="stylesheet" href="/src/styles/global.css" />
    <link rel="alternate" hreflang="en" href={Astro.site} />
    <link rel="alternate" hreflang="de" href={Astro.site + 'de'} />
  </head>
  <body class="bg-gray-900 text-white min-h-screen flex flex-col">
    <nav class="absolute top-4 right-4 z-20">
      <a href={otherLocalePath} class="bg-white/20 hover:bg-white/30 text-white px-3 py-1 rounded text-sm transition-colors">
        {t.languageSwitch}
      </a>
    </nav>
    <main class="flex-1 flex items-center justify-center relative">
      <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1519389950473-47ba0277781c?auto=format&fit=crop&w=1500&q=80')] bg-cover bg-center opacity-40"></div>
      <div class="relative z-10 max-w-2xl mx-auto p-8 rounded-xl bg-black/70 shadow-lg flex flex-col items-start">
        <div class="mb-6">
          <div class="text-3xl font-bold mb-2">{t.company}</div>
          <div class="text-lg font-semibold">{t.subtitle}</div>
          <div class="text-md">{t.solutions}</div>
        </div>
        <h1 class="text-4xl font-extrabold mb-4 leading-tight">{t.headline}</h1>
        <p class="mb-6 text-lg">{t.subheadline}</p>
        <form class="w-full mb-4">
          <label for="topic" class="block mb-2 font-medium">{t.topicLabel}</label>
          <select id="topic" name="topic" class="w-full p-2 rounded bg-gray-800 text-white border border-gray-700 focus:outline-none focus:ring-2 focus:ring-cyan-400">
            {topics.map(topic => <option value={topic}>{topic}</option>)}
          </select>
        </form>
        <div class="flex flex-col sm:flex-row gap-4 w-full">
          <button id="calendly-btn" class="bg-cyan-400 hover:bg-cyan-500 text-black font-bold py-3 px-6 rounded transition-colors w-full sm:w-auto" onclick="window.open('https://calendly.com/issa-zaytoun/erstgesprach-mit-issa-zaytoun-web-e-commerce', '_blank')">{t.calendlyButton}</button>
          <span class="flex items-center bg-white/10 text-white font-bold py-3 px-6 rounded w-full sm:w-auto text-center justify-center border border-white/20 select-all">{t.phoneLabel}</span>
        </div>
        <p class="mt-4 text-xs text-gray-300">{t.dsgvoNote}</p>
      </div>
    </main>
    <footer class="text-center text-gray-400 py-4 text-sm">&copy; {new Date().getFullYear()} {t.footer}</footer>
  </body>
</html> 