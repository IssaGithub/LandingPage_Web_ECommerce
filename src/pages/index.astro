---
import { translations } from '../i18n/translations.js';

// Auto-detect language for German users
let currentLocale = 'en'; // Default to English
const acceptLanguage = Astro.request.headers.get('accept-language') || '';

// If browser language is German and doesn't prefer English, show German
if (acceptLanguage.toLowerCase().includes('de') && !acceptLanguage.toLowerCase().startsWith('en')) {
  currentLocale = 'de';
}

const t = translations[currentLocale];
const otherLocale = currentLocale === 'en' ? 'de' : 'en';

// Create proper base path for links
const baseUrl = import.meta.env.BASE_URL || '/';
const otherLocalePath = currentLocale === 'en' ? baseUrl + 'de' : baseUrl.replace(/\/$/, '');

// Create proper image path - handle both local and GitHub Pages
const imagePath = baseUrl.endsWith('/') ? baseUrl + '4L9A9035.jpg' : baseUrl + '/4L9A9035.jpg';

const topics = [
  t.topics.website,
  t.topics.onlineShop,
  t.topics.individualProgramming,
  t.topics.app
];
---
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{t.title}</title>
    <meta name="description" content={t.description} />
    <link rel="stylesheet" href="/src/styles/global.css" />
    <link rel="alternate" hreflang="en" href={Astro.site} />
    <link rel="alternate" hreflang="de" href={Astro.site + 'de'} />
  </head>
  <body class="bg-gray-900 text-white min-h-screen flex flex-col">
    <nav class="absolute top-4 right-4 z-20">
      <a href={otherLocalePath} class="bg-white/20 hover:bg-white/30 text-white px-3 py-1 rounded text-sm transition-colors">
        {t.languageSwitch}
      </a>
    </nav>
    
    <!-- Hero Section -->
    <main class="flex-1 flex items-center justify-center relative">
      <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1519389950473-47ba0277781c?auto=format&fit=crop&w=1500&q=80')] bg-cover bg-center opacity-40"></div>
      <div class="relative z-10 max-w-2xl mx-auto p-8 rounded-xl bg-black/70 shadow-lg flex flex-col items-start">
        <div class="mb-6">
          <div class="text-3xl font-bold mb-2">{t.company}</div>
          <div class="text-lg font-semibold">{t.subtitle}</div>
          <div class="text-md">{t.solutions}</div>
        </div>
        <h1 class="text-4xl font-extrabold mb-4 leading-tight">{t.headline}</h1>
        <p class="mb-6 text-lg">{t.subheadline}</p>
        <form class="w-full mb-4">
          <label for="topic" class="block mb-2 font-medium">{t.topicLabel}</label>
          <select id="topic" name="topic" class="w-full p-2 rounded bg-gray-800 text-white border border-gray-700 focus:outline-none focus:ring-2 focus:ring-cyan-400">
            {topics.map(topic => <option value={topic}>{topic}</option>)}
          </select>
        </form>
        <div class="flex flex-col sm:flex-row gap-4 w-full">
          <button id="calendly-btn" class="bg-cyan-400 hover:bg-cyan-500 text-black font-bold py-3 px-6 rounded transition-colors w-full sm:w-auto" onclick="window.open('https://calendly.com/issa-zaytoun/erstgesprach-mit-issa-zaytoun-web-e-commerce', '_blank')">{t.calendlyButton}</button>
          <span class="flex items-center bg-white/10 text-white font-bold py-3 px-6 rounded w-full sm:w-auto text-center justify-center border border-white/20 select-all">{t.phoneLabel}</span>
        </div>
        <p class="mt-4 text-xs text-gray-300">{t.dsgvoNote}</p>
      </div>
    </main>

    <!-- About Section -->
    <section class="bg-gray-800 py-16">
      <div class="max-w-6xl mx-auto px-8">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <!-- Photo -->
          <div class="text-center md:text-left">
            <div class="inline-block relative">
              <img 
                src={imagePath}
                alt="Issa Zaytoun - E-Commerce & Software Development Expert"
                class="w-64 h-64 md:w-80 md:h-80 rounded-full object-cover shadow-2xl border-4 border-cyan-400/20"
                loading="lazy"
              />
              <div class="absolute -bottom-4 -right-4 bg-cyan-400 rounded-full p-3">
                <svg class="w-8 h-8 text-black" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
          </div>
          
          <!-- Bio Content -->
          <div>
            <h2 class="text-3xl font-bold mb-6 text-cyan-400">{t.aboutTitle}</h2>
            <p class="text-lg text-gray-300 mb-8 leading-relaxed">{t.aboutText}</p>
            
            <!-- Highlights -->
            <div class="space-y-3">
              {t.aboutHighlights.map(highlight => (
                <div class="flex items-center">
                  <div class="w-2 h-2 bg-cyan-400 rounded-full mr-3"></div>
                  <span class="text-gray-300">{highlight}</span>
                </div>
              ))}
            </div>
            
            <!-- CTA -->
            <div class="mt-8">
              <button onclick="window.open('https://calendly.com/issa-zaytoun/erstgesprach-mit-issa-zaytoun-web-e-commerce', '_blank')" class="bg-cyan-400 hover:bg-cyan-500 text-black font-bold py-3 px-6 rounded transition-colors">
                {t.calendlyButton}
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="bg-gray-900 py-16">
      <div class="max-w-6xl mx-auto px-8">
        <h2 class="text-3xl font-bold text-center mb-12">{t.servicesTitle}</h2>
        
        <!-- E-Commerce Services -->
        <div class="mb-16">
          <div class="flex justify-between items-center mb-8">
            <h3 class="text-2xl font-bold text-cyan-400">{t.ecommerceTitle}</h3>
            <a href={currentLocale === 'en' ? baseUrl + 'ecommerce' : baseUrl + 'de/ecommerce'} class="bg-cyan-400 hover:bg-cyan-500 text-black font-semibold py-2 px-4 rounded transition-colors text-sm">
              {t.ctaButton}
            </a>
          </div>
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-gray-800/50 p-6 rounded-lg">
              <h4 class="text-xl font-semibold mb-4 text-white">{t.services.ecommerce.consulting.title}</h4>
              <ul class="space-y-2">
                {t.services.ecommerce.consulting.items.map(item => (
                  <li class="text-gray-300 text-sm flex items-start">
                    <span class="text-cyan-400 mr-2 mt-1">•</span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
            <div class="bg-gray-800/50 p-6 rounded-lg">
              <h4 class="text-xl font-semibold mb-4 text-white">{t.services.ecommerce.development.title}</h4>
              <ul class="space-y-2">
                {t.services.ecommerce.development.items.map(item => (
                  <li class="text-gray-300 text-sm flex items-start">
                    <span class="text-cyan-400 mr-2 mt-1">•</span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
            <div class="bg-gray-800/50 p-6 rounded-lg">
              <h4 class="text-xl font-semibold mb-4 text-white">{t.services.ecommerce.operation.title}</h4>
              <ul class="space-y-2">
                {t.services.ecommerce.operation.items.map(item => (
                  <li class="text-gray-300 text-sm flex items-start">
                    <span class="text-cyan-400 mr-2 mt-1">•</span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
            <div class="bg-gray-800/50 p-6 rounded-lg">
              <h4 class="text-xl font-semibold mb-4 text-white">{t.services.ecommerce.marketing.title}</h4>
              <ul class="space-y-2">
                {t.services.ecommerce.marketing.items.map(item => (
                  <li class="text-gray-300 text-sm flex items-start">
                    <span class="text-cyan-400 mr-2 mt-1">•</span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>

        <!-- Software Development Services -->
        <div>
          <div class="flex justify-between items-center mb-8">
            <h3 class="text-2xl font-bold text-cyan-400">{t.softwareTitle}</h3>
            <a href={currentLocale === 'en' ? baseUrl + 'software' : baseUrl + 'de/software'} class="bg-cyan-400 hover:bg-cyan-500 text-black font-semibold py-2 px-4 rounded transition-colors text-sm">
              {t.ctaButton}
            </a>
          </div>
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-gray-800/50 p-6 rounded-lg">
              <h4 class="text-xl font-semibold mb-4 text-white">{t.services.software.individual.title}</h4>
              <ul class="space-y-2">
                {t.services.software.individual.items.map(item => (
                  <li class="text-gray-300 text-sm flex items-start">
                    <span class="text-cyan-400 mr-2 mt-1">•</span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
            <div class="bg-gray-800/50 p-6 rounded-lg">
              <h4 class="text-xl font-semibold mb-4 text-white">{t.services.software.technologies.title}</h4>
              <ul class="space-y-2">
                {t.services.software.technologies.items.map(item => (
                  <li class="text-gray-300 text-sm flex items-start">
                    <span class="text-cyan-400 mr-2 mt-1">•</span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
            <div class="bg-gray-800/50 p-6 rounded-lg">
              <h4 class="text-xl font-semibold mb-4 text-white">{t.services.software.integrations.title}</h4>
              <ul class="space-y-2">
                {t.services.software.integrations.items.map(item => (
                  <li class="text-gray-300 text-sm flex items-start">
                    <span class="text-cyan-400 mr-2 mt-1">•</span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
            <div class="bg-gray-800/50 p-6 rounded-lg">
              <h4 class="text-xl font-semibold mb-4 text-white">{t.services.software.quality.title}</h4>
              <ul class="space-y-2">
                {t.services.software.quality.items.map(item => (
                  <li class="text-gray-300 text-sm flex items-start">
                    <span class="text-cyan-400 mr-2 mt-1">•</span>
                    {item}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact CTA Section -->
    <section class="bg-gradient-to-r from-cyan-600 to-blue-600 py-16">
      <div class="max-w-4xl mx-auto px-8 text-center">
        <h2 class="text-3xl font-bold mb-4">{t.contactCta}</h2>
        <p class="text-xl mb-8 opacity-90">Let's discuss your project and find the perfect solution for your business needs.</p>
        <button onclick="window.open('https://calendly.com/issa-zaytoun/erstgesprach-mit-issa-zaytoun-web-e-commerce', '_blank')" class="bg-white hover:bg-gray-100 text-blue-600 font-bold py-4 px-8 rounded-lg text-lg transition-colors">
          {t.contactCtaButton}
        </button>
      </div>
    </section>

    <footer class="text-center text-gray-400 py-4 text-sm">&copy; {new Date().getFullYear()} {t.footer}</footer>
  </body>
</html> 